<Window
    x:Class="DynamicUniform.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:DynamicUniform"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="动态均分布局演示"
    Width="1200"
    Height="800"
    ResizeMode="CanMinimize"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Window.Resources>
        <Style x:Key="Style.SlideListBoxItem" TargetType="{x:Type ListBoxItem}">
            <Setter Property="FocusVisualStyle" Value="{x:Null}" />
            <Setter Property="Margin" Value="2" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ListBoxItem}">
                        <Border Background="#000000">
                            <ContentPresenter HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <ControlTemplate x:Key="Template.ListBox" TargetType="{x:Type ListBox}">
            <ScrollViewer
                Margin="2"
                HorizontalScrollBarVisibility="Disabled"
                PanningMode="VerticalOnly"
                VerticalScrollBarVisibility="Auto">
                <local:VirtualizingUniformGrid
                    Columns="4"
                    FocusVisualStyle="{x:Null}"
                    IsItemsHost="True"
                    Rows="4" />
            </ScrollViewer>
        </ControlTemplate>

        <DataTemplate x:Key="ImageItemTemplate">
            <Border
                Background="#000000"
                BorderBrush="#000000"
                BorderThickness="1">
                <Grid>
                    <Image Source="{Binding ImageSource}" Stretch="Uniform" />
                    <TextBlock
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontSize="20"
                        Foreground="#FFFFFF"
                        Text="{Binding ImageText}" />
                </Grid>

            </Border>
        </DataTemplate>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackPanel
            Margin="5"
            HorizontalAlignment="Left"
            Orientation="Horizontal">
            <TextBlock
                Margin="0,0,5,0"
                VerticalAlignment="Center"
                Text="布局" />
            <ComboBox
                x:Name="LayoutComboBox"
                Grid.Row="0"
                Width="100"
                Height="30"
                VerticalContentAlignment="Center"
                SelectedIndex="0"
                SelectionChanged="LayoutComboBox_SelectionChanged">
                <ComboBoxItem Content="2 * 2" Tag="2,2" />
                <ComboBoxItem Content="4 * 4" Tag="4,4" />
                <ComboBoxItem Content="4 * 8" Tag="4,8" />
            </ComboBox>

            <Button
                x:Name="AddTestDataBtn"
                Width="100"
                Height="30"
                Margin="20,0,0,0"
                Click="AddTestDataBtn_Click"
                Content="添加测试数据" />
            <Button
                x:Name="ClearDataBtn"
                Width="80"
                Height="30"
                Margin="10,0,0,0"
                Click="ClearDataBtn_Click"
                Content="清空数据" />
        </StackPanel>
        <Grid Grid.Row="1" Background="#FFFFFF">
            <ListBox
                x:Name="ImageListBox"
                Grid.Row="2"
                Background="Transparent"
                BorderThickness="0"
                ItemContainerStyle="{StaticResource Style.SlideListBoxItem}"
                ItemTemplate="{StaticResource ImageItemTemplate}"
                SelectionMode="Single"
                Template="{StaticResource Template.ListBox}" />
        </Grid>
    </Grid>
</Window>
